{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Bundler",
    "checkJs": true,
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "paths": {
      "~/*": ["./src/js/modules/*"]
    },
    "types": ["node", "mocha", "undertaker"]
  },
  "include": ["./src/js/**/*", "./gulpfile.esm.js/**/*"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
